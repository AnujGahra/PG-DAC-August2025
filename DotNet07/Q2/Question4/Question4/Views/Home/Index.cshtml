@{
    ViewData["Title"] = "Home Page";
}

<h2>@ViewBag.Message</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form class="d-grid" asp-action="Index" asp-controller="Home" method="post">
                <input type="text" name="name" placeholder="Enter your name" class=" col-4 form-control" />
                <button type="submit" class="btn btn-outline-primary mt-2">Submit</button>
            </form>
        </div>

    </div>

</div>

<br />

<a asp-action="ShowDetails" class="btn btn-outline-primary col-sm-4">Go to ShowDetails Action</a>
