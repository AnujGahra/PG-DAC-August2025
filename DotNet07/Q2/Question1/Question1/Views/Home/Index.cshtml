@model Question1.Models.Address
@* @model Address *@
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4 mt-6">
            <form class="d-grid" asp-action="Index" asp-controller="Home" method="post">
                <label asp-for="HouseNo">House No:</label>
                <input asp-for="HouseNo" class="form-control" placeholder="Enter Your House No."/>
                <br/>
                <label asp-for="Street">Street Name</label>
                <input asp-for="Street" class="form-control" placeholder="Enter Your Street Name"/>
                <br/>
                <label asp-for="City">City Name</label>
                <input asp-for="City" class="form-control" placeholder="Enter Your House No."/>
                <br/>
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </form>
        </div>
        <div class="col-sm-7">
            @if (Model != null && !string.IsNullOrEmpty(Model.City))
            {
                <div class="card mt-3 p-3 shadow-sm">
                    <h4>Submitted Details</h4>
                    <hr/>
                    <p><strong>House No:</strong> @Model.HouseNo</p>
                    <p><strong>Street Name:</strong> @Model.Street</p>
                    <p><strong>City Name:</strong> @Model.City</p>
                </div>
            }
        </div>
    </div>

</div>

